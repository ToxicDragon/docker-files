FROM ubuntu:focal

ARG DEBIAN_FRONTEND=noninteractive
ARG TZ=Europe/Vienna
RUN apt update
RUN apt install --yes apt-utils
RUN apt install --yes tzdata
RUN ln -fs /usr/share/zoneinfo/Europe/Vienna /etc/localtime
RUN dpkg-reconfigure tzdata
RUN apt install --yes --assume-yes --no-install-recommends --no-install-suggests \
        texlive-full \
        texlive-latex-base \
        texlive-lang-german \
        texlive-lang-english \
        texlive-binaries \
        texlive-latex-extra \
        texlive-plain-generic \
        texlive-science \
        texlive-fonts-recommended \
        texlive-fonts-extra \
        texlive-font-utils \
        texlive-xetex \
        texlive-luatex \
        latexmk \
        biber \
        lmodern \
        python3 \
        python3-pygments \
        gnuplot \
        make \
        inkscape \
        appmenu-gtk2-module \
        appmenu-gtk3-module \
        libcanberra-gtk-module
RUN apt remove --yes '^texlive-.*-doc$'
RUN apt autoclean
RUN apt --purge --yes autoremove
RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3 10
